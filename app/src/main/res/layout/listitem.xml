<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/listrow"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>

    <TextView
        android:id="@+id/listitemquant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="6sp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/listitemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/listitemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listitemname"
        android:layout_toEndOf="@+id/listitemname"
        android:gravity="start"
        android:paddingStart="15sp"
        android:text="TextView"
        android:textSize="14sp" />
</RelativeLayout>

